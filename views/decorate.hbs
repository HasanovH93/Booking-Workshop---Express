<section id="decorate-section">
    <h1 class="item">{{room.name}}</h1>
    <div class="item padded">

        <main class="layout right large">

            <div class="col">

                <img src="{{room.imgUrl}}" class="img-large">

            </div>

            <div class="content pad-med">
             
             <p>Facilities:</p>

           
               <form method="post" action="/facility/{{room._id}}/decorateRoom">
                  <ul class="catalog">
                  {{#each facilities}}
                  <li><label><input type="checkbox" name="{{_id}}" {{#if checked}}checked{{/if}}>{{label}} <img class="facility-icon"src="{{iconUrl}}" alt=""></label></li>
                  {{/each}}
                </ul>
                <button class="action cta">Confirm Facilities</button>
               </form>
               

            </div>
        </main>
    </div>
</section>